n    return {\r\n      newTodo: '',\r\n      todos: []\r\n    }\r\n  },\r\n  methods: {\r\n    addTodo() {\r\n      if (this.newTodo.trim().length === 0) {\r\n        return\r\n      }\r\n      this.todos.push({\r\n        text: this.newTodo,\r\n        done: false\r\n      })\r\n      this.newTodo = ''\r\n    },\r\n    removeTodo(index) {\r\n      this.todos.splice(index, 1)\r\n    },\r\n    showAll() {\r\n      this.filter = 'all'\r\n    },\r\n    showActive() {\r\n      this.filter = 'active'\r\n    },\r\n    showCompleted() {\r\n      this.filter = 'completed'\r\n    }\r\n  },\r\n  computed: {\r\n    filteredTodos() {\r\n      switch (this.filter) {\r\n        case 'active':\r\n          return this.todos.filter(todo => !todo.done)\r\n        case 'completed':\r\n          return this.todos.filter(todo => todo.done)\r\n        default:\r\n          return this.todos\r\n      }\r\n    }\r\n  }\r\n}\r\n</script>\r\n\r\n<style>\r\n\r\nbody{\r\nbackground-color: #0099FF; \r\n}\r\n.todo-list {\r\n  max-width: px;\r\n  margin: 0 auto;\r\n  padding: 40px;\r\n  font-size: 1.2rem;\r\n  background-color: #0099FF;\r\n}\r\n\r\n.todo-list h1 {\r\n  text-align: center;\r\n  color: white;\r\n}\r\n\r\n.todo-list form {\r\n    display: flex;\r\n    margin-bottom: 20px;\r\n}\r\n\r\n.todo-list input[type=text] {\r\n    flex: 0.4;\r\n    margin-left: 500px;\r\n    padding: 2px;\r\n    font-size: 01.2rem;\r\n    border-radius: 10px;\r\n}\r\n\r\n.todo-list button[type=submit] {\r\n    margin-left: 10px;\r\n    padding: 8px;\r\n    font-size: 1.2rem;\r\n    background-color: blue;\r\n    border-radius: 9910px;\r\n}\r\n\r\n.todo-list h2{\r\n  text-align: center;\r\n  color: white;\r\n}\r\n\r\n.todo-list ul {\r\n    list-style: none;\r\n    padding: 0;\r\n    font-size: 1.9rem;\r\n}\r\n\r\n.todo-list li {\r\n    display: flex;\r\n    align-items:center;\r\n    margin-bottom: 10px;\r\n}\r\n\r\n.todo-list input[type=checkbox] {\r\n    margin-right: 30px;\r\n}\r\n\r\n.todo-list .done {\r\n